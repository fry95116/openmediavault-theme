{
  "type": "config",
  "id": "conf.service.theme",
  "title": "Theme",
  "queryinfo": {
    "xpath": "//services/theme",
    "iterable": false
  },
  "properties": {
    "theme_select": {
      "type": "string",
      "default": "default"
    },
    "logo_url": {
      "type": "string",
      "default": "https://i.ibb.co/vXk1SG2/logo.png"
    },
    "header_text": {
      "type": "string",
      "default": "This is a test"
    },
    "header_bg_color": {
      "type": "string",
      "default": "#ff00ff"
    },
    "header_bg_image": {
      "type": "string",
      "default": "https://i.ibb.co/HKb9B7m/hi-tech-concepts-on-blue-background-header.jpg"
    },
    "font_size": {
      "type": "integer",
      "default": 16
    },
    "font_weight": {
      "type": "string",
      "default": "400"
    }
  }
}